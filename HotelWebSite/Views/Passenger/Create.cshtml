                @Html.ValidationMessageFor(model => model.PassportNumber, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <a href="@Url.Action("Index")" class="btn btn-primary btn-sm">
                <span class="glyphicon glyphicon-backward"></span>
                بازگشت به لیست مسافر ها
            </a>

            <button class="btn btn-sm btn-success pull-left" type="submit">
                <span class="glyphicon glyphicon-save"></span>
                ذخیره
            </button>
        </div>
    </div>
